def ground_shipping(ground_weight):
  if ground_weight <= 2.0:
    ground_cost = 1.50
  elif ground_weight <= 6.0:
    ground_cost = 3.00
  elif ground_weight <= 10.0:
    ground_cost = 4.00
  else:
    ground_cost = 4.75
  return ground_cost * ground_weight + 20
  
print(ground_shipping(8.4) + 20)
premium_ground_shipping = 125
print(premium_ground_shipping)

def drone_shipping(package_weight):
  if package_weight <= 2:
    drone_cost = 4.50
  elif package_weight <= 6:
    drone_cost = 9.00
  elif package_weight <= 10:
    drone_cost = 12.00
  else:
    drone_cost = 14.25
  return package_weight * drone_cost

print(drone_shipping(1.5))

def compare_shipping(weight):
  
  ground = ground_shipping(weight)
  premium = premium_ground_shipping
  drone = drone_shipping(weight)
  
  if ground < premium and ground < drone:
    cost = ground
    method = "ground shipping"
  elif premium < ground and premium < drone:
    cost = premium
    method = "premium shipping"
  else:
    cost = drone
    method = "drone shipping"
  
  print("You should ship using " + method + ", which will cost " + str(cost))
  
print(compare_shipping(4.8))
print(compare_shipping(41.5))
    
